<div id="error" class="alert alert-danger col-lg-3 col-lg-offset-4"></div>
<div class="outside-container">
  <div class="new-user-well">
    <div class="container eternity-form">
      <div class="forgot-password-section animated fadeInUp">
        <div class="section-title">
          <p>Enter your phone number to get started.</p>
        </div>
        <div class="forgot-content">
          <%= form_for @user do |f| %>
            <div class="textbox-wrap">
              <div class="input-group input-group-lg col-lg-12">
                <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
                <%= f.text_field :phone_number, class: "form-control", placeholder: "555-555-5555", autocomplete: :off, required: "required", id: "text-input" %>
              </div>
            </div>
            <div class="forget-form-action clearfix">
              <div class="new-user-button input-group input-group-lg col-lg-12">
                <%= f.submit "Sign Up", class: "btn btn-success btn-lg btn-block" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>